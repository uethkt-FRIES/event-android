    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:src="@drawable/ic_crop_free" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/t_i_l_edit_info_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_view"
            android:layout_marginTop="@dimen/padding_view"
            android:layout_marginBottom="@dimen/padding_view"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edt_type_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_type_code"
                android:text="@string/app_name"
                android:textSize="@dimen/t_size_edt_big">

                <requestFocus />

            </EditText>

        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/btn_send_code"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_send"/>

    </LinearLayout>


    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|end"
        android:alpha="0.7"
        android:padding="@dimen/padding_layout"
        android:src="@drawable/ic_flash_on"
        android:background="?attr/selectableItemBackground"/>

</FrameLayout>