<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/padding_layout">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Bạc có thể check in bằng 2 cách: Scan QR Code hoặc nhập mã check in\n Asladjflsajdfljasdlfjasldfjlsadfjlj\nẤDFASDFasadfasdfhshadfhasdfsjkdfhakkajsfd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_type_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/btn_margin"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:elevation="2dp"
            android:text="@string/txt_type"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_scan_qr_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:elevation="2dp"
            android:text="@string/txt_scan"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingEnd="@dimen/padding_layout"
        android:paddingStart="@dimen/padding_layout"
        android:text="@string/txt_history"
        android:textColor="@color/white" />


</LinearLayout>